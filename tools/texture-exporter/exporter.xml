<exporter version="1.0">
	<name>badecho</name>
	<displayName>Bad Echo</displayName>
	<description>Texture atlas format for Bad Echo</description>
	<version>1.0</version>

    <files>
        <file>
            <name>badecho</name>
            <displayName>Texture atlas file</displayName>
            <fileExtension>atlas</fileExtension>
            <description>Texture atlas file for Bad Echo</description>
            <template>badecho.atlas</template>
            <hasSeparateMultiPackFiles>true</hasSeparateMultiPackFiles>
        </file>
    </files>

    <supportsTrimming>true</supportsTrimming>
    <supportsRotation>false</supportsRotation>
    <rotationDirection>cw</rotationDirection>
    <supportsNPOT>true</supportsNPOT>>
    <supportsTextureSubPath>no</supportsTextureSubPath>
    <supportsPivotPoint>false</supportsPivotPoint>
    <supportsAnimations>false</supportsAnimations>
    <supportsScale9>true</supportsScale9>
</exporter>
